@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1 ">
        <h4 style="">@Model.Name</h4>
        <img src="@Model.Img" />
        <span class="badge badge-pill badge-primary" style="float:right;font-size:20px">
            <small>@Model.Price.ToString("c")</small>
          
        </span>
        <span class="badge badge-pill badge-primary bg-danger" style="float:right;font-size:20px">
            <small>Sales : @Model.Discount%</small>

        </span>
    </div>
    <div class="card-text p-1">
        @Model.Description
    </div>
    
</div>

@*View Component*@

